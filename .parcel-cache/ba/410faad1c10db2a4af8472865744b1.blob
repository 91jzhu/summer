*{box-sizing: border-box;margin:0;padding:0;}
*::before,*::after{box-sizing: border-box;}
body{
    background-color: rgb(182, 254, 252);
}
.body{
    border:1px solid red;
    height:120px;
    width: 70px;
    background-color: rgb(255, 165, 0);
    margin-left: auto;
    margin-right: auto;
    margin-top: 50px;
    border-radius: 35px;
    position: relative;
}
.ear{
    border:1px solid black;
    height:50px;
    width:25px;
    margin-top: -20px;
    background-color: rgb(255, 165, 0);
}
.ear::before{
    content: "";
    display: block;
    border:1px solid blue;
    width:15px;
    height: 30px;
    position: relative;
    left:50%;
    top:10px;
    margin-left:-7.5px;
}
.ear.left{
    position: absolute;
    border-radius: 180px/300px;
    margin-left: 3px;
}
.ear.right{
    position: absolute;
    right:0;
    border-radius: 180px/300px;
    margin-right: 3px;
}
